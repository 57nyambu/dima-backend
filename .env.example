# Django Environment Configuration
# Copy this to .env and update with your values

# Basic Django Settings
#SECRET_KEY=your-secret-key-here
DEBUG=True

# Database (if using PostgreSQL)
# DB_URL=postgresql://user:password@localhost:5432/dbname

# Storage Configuration
# Options: 'local' for traditional file storage, 'cloud' for image server
STORAGE_BACKEND=local

# Cloud Storage Settings (only needed if STORAGE_BACKEND=cloud)
# CLOUD_IMAGE_SERVER_URL=https://deploy.finarchitect.online/qazsw

# Email Settings (if using)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# M-Pesa Settings (if using payments)
# MPESA_CONSUMER_KEY=your-mpesa-consumer-key
# MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
# MPESA_SHORTCODE=your-shortcode

# External Service Keys
# DIMA_RESEND_KEY=your-resend-key